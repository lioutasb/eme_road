<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#101010</item>
        <item name="android:textColorLink">#ff0099cc</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ToolBar.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolBar.Theme.Popup" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#669999</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
